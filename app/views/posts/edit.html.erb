<%= form_for @post, url: post_path(id: @post.id), method: :put do |f| %>
<div>
  <%=f.label :title%></br>
<%= f.text_field :title %>
</div>

<div>
  <%=f.label :author%></br>
<%= f.text_field :author %>
</div>

<div>
  <%=f.label :content%></br>
<%= f.text_area :content %>
</div>

<div>

<%= f.submit "Create" %>
</div>


<div>
<%= f.submit "Destroy" %>

</div>
<% end %>
